<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".ChatActivity"
    android:background="#91000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Cancel"
            android:textColor="@color/green"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tPost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_post"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="OK"
            android:textColor="@color/green"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99696969" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edtPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#29ffffff"
                android:focusable="true"
                android:hint="Table de MatiÃ¨re :"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:textSize="26dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alphabetique"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/sorting"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:background="@drawable/button"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numerique"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/nsorting"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#29ffffff"
                android:focusable="true"
                android:hint="Ordre : "
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:textSize="26dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descendant"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/sorting"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:background="@drawable/button"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ascendant"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/nsorting"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                />


        </LinearLayout>


</LinearLayout>